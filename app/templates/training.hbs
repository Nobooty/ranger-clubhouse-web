<ChSidebar>
  {{#ch-sidebar-group training.title}}
    {{ch-sidebar-link "training.index" title="Trainer's Report" icon="list-alt" iconType="r"}}
    {{ch-sidebar-link "training.capacity" training.id title="Training Capacity" icon="battery-half" iconType="s"}}
    {{ch-sidebar-link "training.multiple-enrollments" training.id title="Multiple Enrollments" icon="copy" iconType="s"}}
    {{ch-sidebar-link "training.people-training-completed" training.id title="Training Completed" icon="check-square" iconType="s"}}
    {{ch-sidebar-link "training.trainer-attendance" training.id title="Trainer Attendance" icon="user-check" iconType="s"}}
    {{#if training.is_art}}
      {{ch-sidebar-link "training.untrained-people" training.id title="Untrained People" icon="exclamation-circle" iconType="s"}}
    {{/if}}
  {{/ch-sidebar-group}}
</ChSidebar>

<main class="col min-width-500">
  <div class="d-md-none mb-2">
      <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Training Section
        </button>
        <div class="dropdown-menu">
          <LinkTo @route="training.index" @model={{training.id}} class="dropdown-item">Trainer's Report</LinkTo>
          <LinkTo @route="training.capacity" @model={{training.id}} class="dropdown-item">Training Capacity</LinkTo>
          <LinkTo @route="training.multiple-enrollments" @model={{training.id}} class="dropdown-item">Multiple Enrollments</LinkTo>
          <LinkTo @route="training.people-training-completed" @model={{training.id}} class="dropdown-item">Training Completed</LinkTo>
          <LinkTo @route="training.trainer-attendance" @model={{training.id}} class="dropdown-item">Trainer Attendance</LinkTo>
          {{#if training.is_art}}
            <LinkTo @route="training.untrained-people" @model={{training.id}} class="dropdown-item">Untrained People</LinkTo>
          {{/if}}
        </div>
      </div>
    </div>

  {{outlet}}
</main>
