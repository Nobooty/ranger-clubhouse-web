<h1>People By Status Report</h1>

{{#each statuses as |status|}}
  <div class="border mb-2">
    <div class="bg-light-gray p-2">
      <a href class="h4" {{action this.toggleStatus status}}>{{fa-icon (if status.showing "caret-down" "caret-right")}} {{status.status}}</a> ({{pluralize status.people.length "person"}})
    </div>

    <div class="row p-2 {{unless status.showing "d-none"}}">
      {{#each status.people as |person|~}}
        <div class="col-sm-6 col-md-3 col-lg-2"><PersonLink @person={{person}} /></div>
      {{~/each}}
    </div>
  </div>
{{/each}}
