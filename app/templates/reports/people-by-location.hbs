<YearSelect @title="People By Location" @year={{this.year}} @onChange={{action (mut this.year)}}  />
<div class="form-row mb-2">
  <div class="col-auto">
    <label class="col-form-label">Filter</label>
  </div>
  <div class="col-auto">
    <ChForm::Select @name="filter" @value={{this.filter}} @options={{this.filterOptions}}
                    @onChange={{action (mut this.filter)}} @controlClass="form-control"/>
  </div>
  <div class="col-auto">
    <button type="button" class="btn btn-primary" disabled={{if this.viewPeople false true}}
      {{action this.exportAllToCSV}}>
      Export {{pluralize this.viewPeople.length "person"}} to CSV
    </button>
    <button type="button" class="btn btn-secondary" {{action this.toggleExpandAll}} disabled={{this.isExpanding}}>
      {{#if this.expandAll}}Hide All{{else}}Expand All{{/if}}
    </button>
  </div>
</div>

Showing {{this.viewPeople.length}} of {{this.people.length}}.
{{#each this.countries as |country idx|}}
  <ChAccordion id="country-{{idx}}" as |accordion|>
    <accordion.title>
      {{country.full_name}} ({{pluralize country.people.length "person"}})
    </accordion.title>
    <accordion.body>
      <p>
        <button type="button" class="btn btn-sm btn-secondary" {{action this.exportCountryToCSV country}}>
          Export {{country.full_name}} to CSV
        </button>
      </p>
      <table class="table table-striped table-hover table-sm">
        <thead>
        <tr>
          <th>Callsign</th>
          <th>Status</th>
          <th>Name</th>
          <th>Email</th>
          <th>City</th>
          <th>State</th>
          <th>Postal Code</th>
          <th>{{this.year}} Signed Up</th>
          <th>{{this.year}} Worked</th>
        </tr>
        </thead>
        <tbody>
        {{#each country.people as |person|}}
          <tr>
            <td>
              <PersonLink @person={{person}} />
            </td>
            <td>{{person.status}}</td>
            <td>{{person.first_name}} {{person.last_name}}</td>
            <td>
              {{#if person.email}}
                {{mail-to person.email}}
              {{else}}
                -
              {{/if}}
            </td>
            <td>{{person.city}}</td>
            <td>
              <PresentOrNot @value={{person.state}} @empty="-"/>
            </td>
            <td>{{person.zip}}</td>
            <td>{{yesno person.signed_up}}</td>
            <td>{{yesno person.worked}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </accordion.body>
  </ChAccordion>
{{/each}}
