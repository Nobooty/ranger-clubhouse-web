<LoginSidebar/>
<main>
  <h1 class="homepage-title">Khaki, Khaki, I need a password reset &hellip; </h1>
  {{#if true }}
    <ChNotice @title="Reset Password Issues April 20th, 2022" @icon="exclamation-triangle">
      <p>
        Due to a mail service issue currently being experienced, the self-service password reset is not available.
      </p>
      <p>
      Email {{admin-email}} to request a password reset.
      </p>
      <p>
        Please be patience, the Tech Ninjas are very busy right now and may take a few hours to respond.
      </p>
    </ChNotice>

  {{else}}
    <ChNotice @title="No longer have access to the email address?" @icon="envelope">
      Email {{admin-email}} if you no longer have
      access to the email address that was used to sign in to the Clubhouse.
    </ChNotice>

    <ChForm @formId="auth"
            @formFor={{this.authForm}}
            @validator={{this.resetPasswordValidations}}
            @onSubmit={{this.submit}} as |f|>
      <FormRow>
        <f.text @name="identification"
                @label="Please enter your email address"
                @inputmode="email"
                @size={{30}}
        />
      </FormRow>
      <f.submit @label="Reset Password" @disabled={{this.isSubmitting}} @submitClass="btn-responsive"/>
      {{#if this.isSubmitting}}
        <LoadingIndicator/>
      {{/if}}
      <div class="text-muted mt-4">Remembered the password?
        <LinkTo @route="login">Back to Login</LinkTo>
      </div>
    </ChForm>
  {{/if}}
</main>
