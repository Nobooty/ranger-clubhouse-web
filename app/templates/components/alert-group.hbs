<tr class="bg-dark text-light no-collapse">
  <td colspan="3">
    {{heading}}<br> {{description}}
  </td>
</tr>
{{#each group as |alert|}}
<tr>
  <td class="alert-pref-desc no-collapse">
    <div class="font-weight-bold">{{alert.title}}</div>
    {{alert.description}}
  </td>
  <td class="alert-pref-address" data-title="SMS">
    {{#if alert.no_opt_out}}
      <span class="text-muted">Cannot be opted out of</span>
    {{else if alert.email_only}}
      <span class="text-muted">only email used</span>
    {{else}}
      {{#if (has-alert-phone alert numbers)}}
        <label>{{input type="checkbox" checked=(mut (get alert "use_sms"))}} {{if alert.on_playa numbers.on_playa.phone numbers.off_playa.phone}}</label>
      {{else}}
        no # number
      {{/if}}
    {{/if}}
  </td>
  <td class="alert-pref-address" data-title="Email">
    {{#if alert.no_opt_out}}
      <span class="text-muted">Cannot be opted out of</span>
    {{else if alert.sms_only}}
      <span class="text-muted">only SMS used</span>
    {{else}}
      <label>{{input type="checkbox" checked=(mut (get alert "use_email"))}} {{email}}</label>
    {{/if}}
  </td>
</tr>
{{/each}}
