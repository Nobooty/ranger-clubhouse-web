<h3>Change Password</h3>
<ChForm @formId="password" @formFor={{this.passwordForm}} @validator={{this.passwordValidations}}
        @onSubmit={{this.submitAction}} as |f| >
  <div class="form-row">
    <f.input @name="password" @type="password" @label="New Password" @size=20 @maxlength=30 @grid="col-auto" />
  </div>
  <div class="form-row">
    <f.input @name="password_confirmation" @type="password" @label="Confirm New Password" @size=20 @maxlength=30 @grid="col-auto" />
  </div>
  <f.submit @label="Change Password" @disabled={{this.isSubmitting}} />
  {{#if this.isSubmitting}}
    <LoadingIndicator />
  {{/if}}
</ChForm>
