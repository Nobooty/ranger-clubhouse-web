{{person-sidebar person=person}}
<main class="col">
  <h1>{{person.callsign}} - {{person.status}} {{if person.vintage " (vintage) "}}({{person.first_name}} {{person.last_name}})</h1>
  {{#if (not person.user_authorized)}}
    {{#ch-alert "danger"}}
      {{fa-icon "exclamation-triangle" size="2x"}}This account is suspended. Please contact the HQ Long.
    {{/ch-alert}}
  {{/if}}
  {{outlet}}
</main>
