<div class="float-right">
  <LinkTo @route="admin.rbs">Back to RBS</LinkTo>
</div>
{{year-select "Unknown Phone Numbers Log" year=year onChange=(action (mut year))}}

<table class="table table-striped table-sm">
  <caption>Showning {{pluralize phones.length "record"}}</caption>
  <thead>
    <tr>
      <th class="w-15">Timestamp</th>
      <th class="w-15">Phone</th>
      <th>Message</th>
    </tr>
  </thead>
  <tbody>
    {{#each phones as |phone|}}
      <tr>
        <td class="w-15">{{phone.created_at}}</td>
        <td class="w-15">{{phone.address}}</td>
        <td>{{phone.message}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
