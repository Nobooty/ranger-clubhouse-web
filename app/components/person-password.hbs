<ModalDialog @title="Change Password" @onEscape={{@onClose}} as |Dialog|>
  <Dialog.body>
    <ChForm @formId="password"
            @formFor={{this.passwordForm}}
            @validator={{this.passwordValidations}}
            @onSubmit={{this.submitAction}} as |f|>
      <FormRow>
        <f.password @name="password"
                    @label="New Password"
                    @size={{20}}
                    @maxlength={{30}} />
      </FormRow>
      <FormRow>
        <f.password @name="password_confirmation"
                    @type="password"
                    @label="Confirm New Password"
                    @size={{20}}
                    @maxlength={{30}}
        />
      </FormRow>
      {{#if this.isSubmitting}}
        <LoadingIndicator/>
      {{/if}}
    </ChForm>
  </Dialog.body>
  <Dialog.footer @noAlign={{true}}>
    <UiButton @onClick={{this.submitAction}}>Change Password</UiButton>
    <UiCancelButton @onClick={{@onClose}} />
  </Dialog.footer>
</ModalDialog>