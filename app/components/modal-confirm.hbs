<ModalDialog @title={{@dialog.title}} as |modal|>
  <modal.body>
    {{{@dialog.message}}}
  </modal.body>
  <modal.footer>
    <modal.button @label="Cancel" @action={{@onClose}} @type="secondary"/>
    <modal.button @label="Confirm" @action={{@onConfirm}} @type="primary"/>
  </modal.footer>
</ModalDialog>
