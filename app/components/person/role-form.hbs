<ModalDialog @title="Edit Roles" @onEscape={{@onCancel}} as  |Modal|>
  <ChForm @formId="roles" @formFor={{this.roleForm}} @onSubmit={{this.save}} as |f|>
    <Modal.body>
      <FormRow>
        <f.input @name="roleIds" @type="checkboxGroup" @options={{this.roleOptions}}/>
      </FormRow>
    </Modal.body>
    <Modal.footer @noAlign={{true}}>
      <f.submit @label="Update" @disabled={{@isSaving}} />
      <UiCancelButton @onClick={{@onCancel}} @disabled={{@isSaving}} />
      {{#if @isSaving}}
        <LoadingIndicator/>
      {{/if}}
    </Modal.footer>
  </ChForm>
</ModalDialog>
