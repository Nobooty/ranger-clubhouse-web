<ModalDialog @title="Edit Positions" @size="xl" @onEscape={{@onCancel}} as |Modal|>
  <ChForm @formId="positions" @formFor={{this.positionForm}}  @onSubmit={{@onSave}} as |f|>
    <Modal.body>
      <div class="form-row">
        <f.input @name="positionIds" @type="checkboxGroup" @wrapClass="form-row" @cols={{4}} @options={{this.positionOptions}} />
      </div>
    </Modal.body>
    <Modal.footer @noAlign=true>
      <f.submit @label="Update"/>
      <UiCancelButton @onClick={{@onCancel}} />
    </Modal.footer>
  </ChForm>
</ModalDialog>
