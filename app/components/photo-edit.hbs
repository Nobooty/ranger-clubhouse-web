<p class="h4 text-center">
  Zoom IN &amp; OUT and DRAG THE IMAGE<br>
  so your face<br>
  FITS IN &amp; FILLS the red oval.<br>
</p>

{{#if this.showEditControls}}
  <p class="mb-2 text-center">
    <UiButton @type="secondary" @class="mr-1" @onClick={{this.zoomOutAction}}>{{fa-icon "search-minus"}}</UiButton>
    <UiButton @type="secondary" @class="mr-1" @onClick={{this.zoomInAction}}>{{fa-icon "search-plus"}}</UiButton>
    <UiButton @type="secondary" @class="mr-1" @onClick={{this.rotateRight}}>{{fa-icon "redo"}}</UiButton>
    <UiButton @type="secondary" @class="mr-1" @onClick={{this.rotateLeft}}>{{fa-icon "undo"}}</UiButton>
    <UiButton @type="secondary" @class="mr-1" @onClick={{this.fipHorizontalAction}}>{{fa-icon "arrows-alt-h"}}</UiButton>
    <UiButton @type="secondary" @onClick={{this.fipVerticalAction}}>{{fa-icon "arrows-alt-v"}}</UiButton>
  </p>
{{/if}}

<div id="photo-edit-container">
  <img id="photo-edit-image" src={{@imageDataUrl}} {{on "load" this.imageLoadedEvent}} alt="edit upload"/>
</div>

<div class="mt-2 text-center">
  {{#if @cancelAction}}
    <UiButton @type="secondary" @class="ml-auto" @onClick={{@cancelAction}} @disabled={{@isSubmitting}}>Retake</UiButton>
  {{/if}}
  <UiButton @class="ml-right" @onClick={{this.submitAction}} @disabled={{@isSubmitting}}>Submit</UiButton>
</div>
