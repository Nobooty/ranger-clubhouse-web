<div class="accordion-container" id="ticket-{{@id}}">
  <div class="accordion-title">
    <a href class="d-block" {{action @toggleCard @id}}>
      {{fa-icon (if (get @showing @id) "minus" "plus")}}
      {{yield to="title"}}
    </a>
  </div>
  <BsCollapse @collapsed={{not (get @showing @id)}} class="accordion-body">
    {{yield to="body"}}
    {{#if @nextAction}}
      <div class="d-grid">
        <UiButton @type="success" @class="mt-4" @disabled={{@nextDisabled}} @onClick={{@nextAction}}>
          Next {{fa-icon "arrow-right"}}
        </UiButton>
      </div>
    {{/if}}
  </BsCollapse>
</div>
