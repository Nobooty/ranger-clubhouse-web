<ModalDialog @title="Burning Man's Behavioral Standards Agreement" as |modal|>
  <modal.body>
    <DocumentShow @tag="behavioral-standards-agreement" @onLoad={{this.documentLoadedAction}} />
  </modal.body>
  <modal.footer>
    <modal.button @label="I do not agree" @action={{@closeAgreement}} @type="secondary"/>
    <modal.button @label="I Agree" @action={{@signAgreement}} @type="primary" @disabled={{not this.documentLoaded}} />
  </modal.footer>
</ModalDialog>
