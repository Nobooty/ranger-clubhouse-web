<ModalDialog @title="Burning Man's Behavioral Standards Agreement" as |modal|>
  <modal.body>
    <DocumentShow @tag="behavioral-standards-agreement" @onLoad={{this.documentLoadedAction}} />
  </modal.body>
  <modal.footer>
    <UiButton @onClick={{@closeAgreement}} @type="secondary" @disabled={{not this.documentLoaded}}>
      I Do Not Agree
    </UiButton>
    <UiButton @onClick={{@signAgreement}}  @disabled={{not this.documentLoaded}}>
      I Agree
    </UiButton>
  </modal.footer>
</ModalDialog>
