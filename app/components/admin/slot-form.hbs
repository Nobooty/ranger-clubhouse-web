<ModalDialog @title={{this.formTitle}} @onEscape={{@onCancel}} as |Modal|>
  <ChForm @formId="slot"
          @formFor={{@slot}}
          @validator={{this.slotValidations}}
          @onSubmit={{@onSave}} as |f|>
    <Modal.body>
      <FormRow>
        <f.input @name="position_id" @label="Position" @type="select" @options={{this.positionOptions}}
                 @inline={{true}}/>
      </FormRow>
      <FormRow>
        <f.input @name="trainer_slot_id"
                 @label="Sign Up Multiplier Trainer's Slot"
                 @type="select"
                 @options={{this.trainerSlotsOptions}}
                 @includeBlank={{true}}
                 @inline={{true}}/>
      </FormRow>

      <FormRow>
        <f.input @name="description" @label="Description" @type="text" @size={{40}} @maxlength={{40}}
                 @hint="{{if f.model.description f.model.description.length "0"}} of 40 characters."/>
      </FormRow>
      <FormRow>
        <f.input @name="begins" @label="Beginning Time" @type="datetime" @maxlength={{25}} />
        <f.input @name="ends" @label="Ending Time" @type="datetime" @maxlength={{20}} />
      </FormRow>
      <FormRow>
        <f.input @name="max"
                 @type="number"
                 @label={{if f.model.trainer_slot_id "Multiplier" "Max Sign Ups"}}
                 @size={{3}} @maxlength={{3}} />
      </FormRow>
      {{#if f.model.trainer_slot_id}}
        <span class="text-danger">NOTE:</span>
        The Trainer's Slot has been set and the Max Sign Ups will act as a multiplier instead of a
        hard count. The total sign ups allowed will be computed as the number of trainers signed up in
        the trainer's slot TIMES the Max Sign Ups limit.
        (e.g., if 2 trainers are signed up, and the sign up limitis 10, the total signups allowed will
        be 20.)
      {{/if}}


      <FormRow>
        <div class="col-auto">
          <f.input @name="active" @label="Active" @type="checkbox"/>
        </div>
      </FormRow>

      <FormRow>
        <f.input @name="url" @label="Information" @type="textarea" @rows={{3}} @cols={{80}} @maxlength={{512}}
                 @hint="{{if f.model.url f.model.url.length "0"}} of 512 characters.
        Additional information may be given about the shift in the above area.
        e.g., Women of Khaki will meet at Tokyo before shift. More info at http://women.khaki/meetup or email
        women@khaki.rangers"/>
      </FormRow>
    </Modal.body>
    <Modal.footer @noAlign={{true}}>
      <f.submit @label={{if @slot.isNew "Create" "Update"}} @disabled={{@slot.isSaving}} />
      {{#unless @slot.isNew}}
        <f.submit @label="Create New Slot" @onSubmit={{@onClone}} />
      {{/unless}}
      <UiCancelButton @onClick={{@onCancel}} />
      {{#if @slot.isSaving}}
        <LoadingIndicator/>
      {{/if}}
    </Modal.footer>
  </ChForm>
</ModalDialog>
