<UiSection>
  <:title>Asset Checkout / In History</:title>
  <:body>
    {{pluralize @assets.length "asset"}} found
    <table class="table table-striped table-sm">
      <thead>
      <tr>
        <th>Type</th>
        <th>Barcode</th>
        <th>Attachment</th>
        <th>Assigned</th>
        <th>Temp ID</th>
        <th>Checked Out</th>
        <th>Checked In</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      {{#each @assets as |ap|}}
        <tr>
          <td>{{ap.asset.description}}</td>
          <td>{{ap.asset.barcode}}</td>
          <td>
            <PresentOrNot @value={{ap.attachment.description}} @empty="-"/>
          </td>
          <td>{{if ap.asset.perm_assign "Perm" "Temp"}}</td>
          <td>
            <PresentOrNot @value={{ap.asset.temp_id}} @empty="-"/>
          </td>
          <td>{{shift-format ap.checked_out}}</td>
          <td>
            {{#if ap.checked_in}}
              {{shift-format ap.checked_in}}
            {{else}}
              <button type="button" class="btn btn-primary btn-sm" {{action this.checkInAsset ap.asset ap}}
                      disabled={{ap.asset.isSubmitting}}>Check In
              </button>
              {{#if ap.asset.isSubmitting}}
                {{fa-icon "spinner" spin=true}}
              {{/if}}
            {{/if}}
          </td>
          <td>
            <button type="button" class="btn btn-secondary btn-sm" {{action this.showHistoryAction ap.asset}}>History
            </button>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="8">
            <strong class="text-danger">No assets were found for {{@year}}</strong>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </:body>
</UiSection>

{{#if this.assetForHistory}}
  <ModalAssetHistory @assetId={{this.assetForHistory.id}} @onClose={{this.closeHistory}} />
{{/if}}
